{
  "name": "npm-library-starter",
  "version": "0.0.1",
  "description": "Starter kit for npm libraries.",
  "license": "MIT",
  "main": "commonjs/index.js",
  "files": [
    "*.js",
    "*.md",
    "umd"
  ],
  "engines": {
    "node": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlplusb/npm-library-starter.git"
  },
  "homepage": "https://github.com/ctrlplusb/npm-library-starter#readme",
  "author": "Sean Matheson <sean@ctrlplusb.com>",
  "keywords": [
    "library"
  ],
  "scripts": {
    "build": "babel-node ./tools/scripts/build.js",
    "check": "yarn run lint && yarn run flow && yarn run test",
    "clean": "rimraf ./commonjs && rimraf ./umd && rimraf ./coverage && rimraf ./flow-coverage",
    "example": "echo 'Make sure to `cd example && yarn install`' && cd example && yarn run start",
    "flow": "babel-node ./tools/scripts/flow",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text",
    "flow:defs": "flow-typed install --overwrite",
    "lint": "eslint modules",
    "prepublish": "yarn run build",
    "test": "jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:coverage:deploy": "yarn run coverage && codecov"
  },
  "devDependencies": {
    "app-root-dir": "1.0.2",
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-plugin-syntax-flow": "6.18.0",
    "babel-plugin-transform-flow-strip-types": "6.21.0",
    "babel-polyfill": "6.20.0",
    "babel-preset-env": "1.1.4",
    "babel-preset-latest": "6.16.0",
    "babel-preset-stage-3": "6.17.0",
    "babel-register": "6.18.0",
    "codecov": "1.0.1",
    "cross-env": "3.1.4",
    "eslint": "3.12.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-plugin-flowtype": "2.29.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "flow-bin": "0.37.4",
    "flow-coverage-report": "0.2.0",
    "flow-typed": "2.0.0",
    "ghooks": "2.0.0",
    "gzip-size": "3.0.0",
    "in-publish": "2.0.0",
    "jest": "18.1.0",
    "pretty-bytes": "4.0.2",
    "ramda": "0.23.0",
    "readline-sync": "1.4.5",
    "rimraf": "2.5.4",
    "webpack": "2.2.0-rc.3",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.14.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn run check"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(commonjs|coverage|flow-typed|node_modules|tools|umd)/"
    ]
  }
}
